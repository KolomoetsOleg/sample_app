%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "sample app", '#', id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Home", root_path
          %li= link_to "Help", help_static_pages_path
          - if signed_in?
            %li= link_to "Users", "#"
            %li.dropdown
              %a.dropdown_toggle{href: "#", "data-toggle" => "dropdown" }
                Acccount
                %b.caret
              %ul.drop_down-menu
                %li= link_to "Profile", current_user
                %li= link_to "Settings", "#"
                %li.divider
                %li= link_to "Sign out", signout_path, method: :delete
          - else
            %li= link_to "Sign In", signin_path