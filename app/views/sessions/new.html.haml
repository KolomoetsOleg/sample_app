- provide(:title, "Sign in")
%h1 Sign in

.row
  .col-md-6.col-md-offset-3
    =form_for :session, url: sessions_path do |user|

      = user.label :email
      = user.text_field :email

      = user.label :password
      = user.password_field :password

      = user.submit "Sign in", class: "btn btn-large btn-primary"

    %p
      New user?
      = link_to "Sign_up now!", signup_path